<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRelative"
    tools:context=".RegistryActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorBackgroundLogin"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="552dp"
                android:layout_height="552dp"
                android:src="@drawable/ic_baseline_school_24px"
                android:tint="@color/colorPrimary"/>

        </RelativeLayout>


        <EditText
            android:id="@+id/user_resgistry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_account_box_24px"
            android:drawableTint="@color/colorPrimary"
            android:background="@color/colorBackgroundLogin"
            android:hint="@string/input_user"
            android:singleLine="true"
            android:padding="10dp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="16dp"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_mail_24px"
            android:drawableTint="@color/colorPrimary"
            android:background="@color/colorBackgroundLogin"
            android:hint="@string/text_email"
            android:singleLine="true"
            android:padding="10dp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="16dp"/>

        <EditText
            android:id="@+id/password_registry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_https_24px"
            android:drawableTint="@color/colorPrimary"
            android:background="@color/colorBackgroundLogin"
            android:hint="@string/input_password"
            android:singleLine="true"
            android:password="true"
            android:padding="10dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/colorPrimary" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="16dp"/>

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_https_24px"
            android:drawableTint="@color/colorPrimary"
            android:background="@color/colorBackgroundLogin"
            android:hint="@string/input_confirm_password"
            android:singleLine="true"
            android:password="true"
            android:padding="10dp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="16dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="@string/text_button_registry"/>


    </LinearLayout>

    </ScrollView>

</RelativeLayout>