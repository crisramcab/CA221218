<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudLogin"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_background"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="552dp"
                android:layout_height="552dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_baseline_school_24px"
                android:tint="@color/colorAccent" />

        </RelativeLayout>

        <EditText
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_edit_text_background"
            android:drawableLeft="@drawable/ic_baseline_account_box_24px"
            android:hint="Usuario"
            android:maxLength="10"
            android:padding="10dp"
            android:singleLine="true"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="16dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_edit_text_background"
            android:drawableLeft="@drawable/ic_baseline_https_24px"
            android:hint="Contraseña"
            android:maxLength="10"
            android:padding="10dp"
            android:singleLine="true" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_button_background"
            android:singleLine="true"
            android:text="@string/log_in"
            android:textColor="@color/colorAccent"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="16dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register"
            android:background="@drawable/login_button_background"
            android:singleLine="true"
            android:text="Registarse"
            android:textColor="@color/colorAccent"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="16dp"></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/texto1"
            android:textColor="@color/colorAccent"
            android:text="¿Aun notienes una cuenta?"/>




    </LinearLayout>

    </ScrollView>


    </RelativeLayout>